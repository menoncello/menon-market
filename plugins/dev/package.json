{
  "name": "@menon/dev",
  "version": "1.0.0",
  "description": "Enhanced development toolkit for Claude Code with Bun.js integration and AI-safe patterns",
  "type": "module",
  "main": "./index.ts",
  "types": "./index.ts",
  "exports": {
    ".": {
      "types": "./index.ts",
      "import": "./index.ts"
    },
    "./templates": "./templates/index.ts",
    "./scripts": "./scripts/index.ts",
    "./skills": "./skills/index.ts"
  },
  "scripts": {
    "dev": "bun --watch index.ts",
    "build": "bun build index.ts --outdir ./dist --target bun",
    "test": "bun test",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "bun run format:check && bun run lint && bun run typecheck && bun test",
    "template": "bun run scripts/template-generator.ts",
    "template:function": "bun run scripts/template-generator.ts ai-function",
    "template:server": "bun run scripts/template-generator.ts bun-server",
    "template:test": "bun run scripts/template-generator.ts test-suite",
    "quality": "bun run scripts/quality-gates.ts",
    "quality:all": "bun run scripts/quality-gates.ts --all",
    "sync:eslint": "bun run scripts/sync-eslint-simple.ts",
    "lint:file": "eslint"
  },
  "keywords": [
    "development",
    "bun",
    "claude-code",
    "ai-safe",
    "templates",
    "quality-gates",
    "productivity"
  ],
  "author": "Eduardo Menoncello",
  "license": "MIT",
  "dependencies": {
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "bun-types": "latest",
    "typescript": "^5.9.3",
    "eslint": "^9.39.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3"
  },
  "peerDependencies": {
    "bun": ">=1.3.0"
  },
  "engines": {
    "bun": ">=1.3.0",
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/menoncello/marketplace",
    "directory": "plugins/dev"
  },
  "bugs": {
    "url": "https://github.com/menoncello/marketplace/issues"
  },
  "homepage": "https://github.com/menoncello/marketplace/tree/main/plugins/dev",
  "files": [
    "*.ts",
    "*.js",
    "*.md",
    "templates/**/*",
    "scripts/**/*",
    "skills/**/*"
  ]
}