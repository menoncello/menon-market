{
  "name": "menon-marketplace",
  "version": "1.0.0",
  "description": "Menon ecosystem marketplace for plugins, agents, and tools",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "author": "Eduardo Menoncello",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/menoncello/marketplace"
  },
  "keywords": [
    "marketplace",
    "plugins",
    "agents",
    "claude-code",
    "automation"
  ],
  "dependencies": {
    "commander": "^14.0.2",
    "handlebars": "^4.7.8",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@types/bun": "latest",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^61.1.12",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "peerDependencies": {
    "typescript": "^5",
    "bun": "^1.0.0",
    "node": "18.20.8"
  },
  "scripts": {
    "test": "bun test",
    "test:research-tools": "bun test plugins/research-tools/",
    "test:studio-cc": "bun test plugins/studio-cc/",
    "test:menon-core": "bun test plugins/menon-core/",
    "test:orchestrator": "bun test agents/orchestrator/",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "build": "bun build plugins/research-tools/index.ts --outdir ./dist --target bun",
    "build:research-tools": "bun build plugins/research-tools/index.ts --outdir ./dist --target bun",
    "build:studio-cc": "bun build plugins/studio-cc/index.ts --outdir ./dist --target bun",
    "build:menon-core": "bun build plugins/menon-core/index.ts --outdir ./dist --target bun",
    "build:orchestrator": "bun build plugins/agents/orchestrator/index.ts --outdir ./dist --target bun",
    "build:all": "bun run build:research-tools && bun run build:studio-cc && bun run build:menon-core && bun run build:orchestrator",
    "dev": "bun --watch plugins/research-tools/index.ts",
    "dev:studio-cc": "bun --watch plugins/studio-cc/index.ts",
    "dev:menon-core": "bun --watch plugins/menon-core/index.ts",
    "dev:orchestrator": "bun --watch plugins/agents/orchestrator/index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:plugins": "eslint plugins/ --fix",
    "lint:agents": "eslint agents/ --fix",
    "format": "./node_modules/.bin/prettier --write .",
    "type-check": "tsc --noEmit",
    "validate": "bun run validate:plugins && bun run validate:agents && bun run validate:marketplace",
    "validate:plugins": "bun run validate:research-tools && bun run validate:studio-cc && bun run validate:menon-core",
    "validate:agents": "bun run validate:orchestrator",
    "validate:research-tools": "cd plugins/research-tools && bun test && bun run lint",
    "validate:studio-cc": "cd plugins/studio-cc && bun test && bun run lint",
    "validate:menon-core": "cd plugins/menon-core && bun test && bun run lint",
    "validate:orchestrator": "cd agents/orchestrator && bun test && bun run lint",
    "validate:marketplace": "node scripts/validate-marketplace.js",
    "package": "node scripts/package-marketplace.js",
    "clean": "rm -rf dist node_modules/.cache",
    "start": "bun run build && bun run dev",
    "prepare": "husky install"
  },
  "engines": {
    "bun": ">=1.3.0"
  },
  "workspaces": [
    "plugins/*",
    "agents/*"
  ]
}
