{
  "name": "basic-plugin-template",
  "version": "1.0.0",
  "description": "A basic Claude Code plugin template for getting started quickly",
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com",
    "url": "https://github.com/yourusername"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/basic-plugin-template.git"
  },
  "homepage": "https://github.com/yourusername/basic-plugin-template#readme",
  "keywords": [
    "claude-code",
    "plugin",
    "template",
    "typescript",
    "productivity"
  ],
  "engines": {
    "claude-code": ">=2.0.0"
  },
  "claude": {
    "minVersion": "2.0.0"
  },
  "categories": ["development", "productivity", "utilities"],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "templates/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {},
  "devDependencies": {
    "typescript": "^5.0.0"
  },
  "permissions": [
    "filesystem:read",
    "filesystem:write",
    "network:request"
  ],
  "capabilities": [
    "commands",
    "skills",
    "hooks"
  ],
  "config": {
    "enableLogging": {
      "type": "boolean",
      "description": "Enable debug logging",
      "default": false
    },
    "maxRetries": {
      "type": "number",
      "description": "Maximum number of retry attempts",
      "default": 3,
      "min": 0,
      "max": 10
    },
    "timeout": {
      "type": "number",
      "description": "Operation timeout in milliseconds",
      "default": 30000,
      "min": 1000
    }
  }
}