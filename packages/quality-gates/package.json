{
  "name": "@menon-market/quality-gates",
  "version": "1.0.0",
  "description": "Quality assurance and validation framework for agent configurations",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "bun test",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "validate-all": "bun run dist/index.js validate-all"
  },
  "keywords": [
    "claude-code",
    "quality-gates",
    "validation",
    "testing",
    "agents"
  ],
  "author": "Eduardo Menoncello",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "typescript": "^5.9.3",
    "bun-types": "^1.3.1"
  },
  "dependencies": {
    "@menon-market/core": "^1.0.0",
    "@menon-market/agent-creator": "^1.0.0",
    "zod": "^4.1.12"
  },
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  }
}
